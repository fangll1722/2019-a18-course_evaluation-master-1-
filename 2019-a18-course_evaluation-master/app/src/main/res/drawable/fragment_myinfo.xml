<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/avatarbackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/mybackground"/>

    <LinearLayout
        android:id="@+id/ll_userMessage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/avatarbackground"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/ll_userMessage" >

        <TextView
            android:id="@+id/tv_divider1"
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:layout_below="@+id/ll_date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_mymajor"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_mymajor"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/my_major"
            android:textColor="#666666"
            android:textSize="20sp"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/tv_divider2"
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:layout_below="@+id/ll_date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/bt_myname"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_myname"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/my_name"
            android:textSize="20sp"
            android:textColor="#666666"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/bt_mypassword"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_mypassword"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/my_password"
            android:textSize="20sp"
            android:textColor="#666666"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/tv_divider3"
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:layout_below="@+id/ll_date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/bt_setting"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_setting"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/my_setting"
            android:textSize="20sp"
            android:textColor="#666666"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/bt_about"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_about"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:text="@string/my_about"
            android:textColor="#666666"
            android:onClick="onClick"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>