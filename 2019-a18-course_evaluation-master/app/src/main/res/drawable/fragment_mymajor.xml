<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.scottmangiapane.courseevaluation.ui.my_info.MyMajorActivity">


    <LinearLayout
        android:id="@+id/ll_function"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_school"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_school"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="我的学校"
            android:textSize="20dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/sp_myschool"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:entries="@array/school"
            android:gravity="center_vertical"></Spinner>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_major"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_major" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="我的专业"
            android:textSize="20dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/sp_mymajor"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:entries="@array/major">
        </Spinner>
    </LinearLayout>

        <TextView
            android:id="@+id/tv_divider1"
            android:layout_width="match_parent"
            android:layout_height="3dip"
            android:layout_below="@+id/ll_date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/button_background"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_mymajor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>