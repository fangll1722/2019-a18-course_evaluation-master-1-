<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_small"
            android:src="@drawable/cblogosplash"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_small"
            android:text="@string/login_header"
            android:textColor="@color/salmon"
            android:textSize="24sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/signup"
            android:layout_margin="@dimen/margin_small"
            android:textColor="@color/battleship_gray"
            android:textSize="24sp"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        >
        <TableRow>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@drawable/account"
                >

            </ImageView>

            <EditText
                android:id="@+id/accountView"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:hint="@string/account_default"
                android:textColor="@android:color/darker_gray" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_school_black_24dp"
                android:layout_gravity="center"></ImageView>

            <EditText
                android:id="@+id/nicknameView"
                android:hint="@string/nickname_default"
                android:textColor="@android:color/darker_gray"></EditText></TableRow>
        <TableRow><ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_school_black_24dp"
            android:layout_gravity="center"></ImageView>

            <Spinner
                android:id="@+id/schoolspinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/school" />

        </TableRow>
        <TableRow>
            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_school_black_24dp"
                android:layout_gravity="center">

            </ImageView>

            <Spinner
                android:id="@+id/majorspinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/major" />

        </TableRow>


        <TableRow>
            <ImageView
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_lock_outline_black_24dp"></ImageView>

            <EditText
                android:id="@+id/passwordView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/password_default"
                android:inputType="textPassword"
                android:textColor="@android:color/darker_gray" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/signup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_background"
            android:text="@string/signup_now"
            android:textColor="@color/white"></Button>

        <TextView
            android:id="@+id/signed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:text="@string/signed"
            android:textColor="@color/salmon">
        </TextView>
    </LinearLayout>

</LinearLayout>